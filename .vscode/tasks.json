{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Air",
            "type": "shell",
            "command": "air",
            "options": {
                "cwd": "${workspaceFolder}/golang"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}


